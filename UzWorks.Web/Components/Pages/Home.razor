@page "/"
@using UzWorks.Core.DataTransferObjects.Jobs
@using UzWorks.Web.Services
@using UzWorks.Web.Services.Jobs
@inject IJobService JobService

<PageTitle>Home</PageTitle>

@foreach(var obj in jobs)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@obj.Title</h5>
            <p class="card-text">@obj.CreateDate</p>
            <a href="#" class="btn btn-primary">Apply</a>
        </div>
    </div>
})

@code{

    IList<JobVM> jobs = new List<JobVM>();

    protected override async Task OnInitializedAsync()
    {
        jobs = await JobService.GetAllJobs();
    }
}


